<h1>Books</h1>

 <h1>投稿一覧</h1>
   <% @books.each do |book| %>
      <span><%= book.title %></span>
      <span><%= book.body %></span><br>
      <%=link_to "show", "/books/#{@book.id}" %>
      <!-- 何かが違う -->
   <% end %>



<h1>New book</h1>
<!-- form_for部分 -->
<%= form_for(@book, url: '/books') do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Body</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'Create book' %>
 
<% end %>
