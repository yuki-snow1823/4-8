<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
   <% @books.each do |book| %>
      <tr>
        <td><span><%= book.title %></span></td>      
        <td><span><%= book.body %></span></td>
        <td><%=link_to "Show", "/books/#{book.id}" %></td>
        <td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
        <td><%= link_to "Destroy","/books/#{book.id}" , method: :delete, "data-confirm" => "Are you sure?" %></td><br>
      </tr>
      <!-- 何かが違う→解決。@book.idではない-->
   <% end %>
 </table>


<h1>New book</h1>
<!-- form_for部分 -->
<%= form_for(@book, url: '/books') do |f| %>
  <% if @book.errors.any? %>
     <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
     <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
     </ul>
  <% end %>
 
    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Body</h4>
    <%= f.text_area :body %><br>
 
    <%= f.submit 'Create book' %>
 
<% end %>
